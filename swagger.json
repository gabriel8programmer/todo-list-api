        },
        "responses": {
          "400": {
            "description": "Bad Request!"
          },
          "401": {
            "description": "Unauthorized!"
          },
          "200": {
            "description": "OK!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "default": "Log in successfuly!"
                    },
