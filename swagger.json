  "paths": {
    "/auth/login": {
      "post": {
        "summary": "Fazer Login",
        "description": "Fazer Login tradicional com email e senha",
        "tags": ["Auth"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Login"
              },
              "examples": {
                "login": {
                  "value": {
                    "email": "john@gmail.com",
                    "password": "123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Bad Request!"
          },
          "401": {
            "description": "Unauthorized!"
          },
          "200": {
            "description": "OK!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "default": "Logged successfuly!"
                    },
                    "user": {
                      "$ref": "#/components/schemas/UserResponse"
                    },
                    "accessToken": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/register": {
