  "components": {
    "schemas": {
      "BaseUserFields": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "email": { "type": "string" },
          "role": {
            "type": "string",
            "enum": ["ADMIN", "CLIENT"],
            "default": "CLIENT"
          },
          "isWithGoogle": {
            "type": "boolean",
            "default": false
          },
          "isWithFacebook": {
            "type": "boolean",
            "default": false
          }
        }
      },
      "User": {
        "allOf": [
          { "$ref": "#/components/schemas/BaseUserFields" },
          {
            "type": "object",
            "properties": {
              "password": { "type": "string" }
            },
            "required": ["name", "email", "password"]
          }
        ]
      },
      "UpdateUser": {
        "allOf": [
          { "$ref": "#/components/schemas/BaseUserFields" },
          {
            "type": "object",
            "properties": {
              "password": { "type": "string" }
            }
          }
        ]
      },
      "UserResponse": {
        "allOf": [
          { "$ref": "#/components/schemas/BaseUserFields" },
          {
            "type": "object",
            "properties": {
              "_id": { "type": "string" }
            }
          }
        ]
      },
      "UserResponseWithTasks": {
        "allOf": [
          { "$ref": "#/components/schemas/UserResponse" },
          {
            "type": "object",
            "properties": {
              "tasks": { "type": "array" }
            }
          }
        ]
      },
      "UserResponseWithPopulatedTasks": {
        "allOf": [
          { "$ref": "#/components/schemas/UserResponse" },
          {
            "type": "object",
            "properties": {
              "tasks": {
                "type": "array",
                "items": { "$ref": "#/components/schemas/Task" }
              }
            }
          }
        ]
      },
      "Login": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": { "type": "string" },
          "password": { "type": "string" }
        }
      },
      "Register": {
        "allOf": [
          { "$ref": "#/components/schemas/Login" },
          {
            "type": "object",
            "properties": {
              "name": { "type": "string" }
            },
            "required": ["name", "email", "password"]
          }
        ]
      },
      "BaseTaskFields": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "description": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["todo", "doing", "done"],
            "default": "todo"
          },
          "priority": {
            "type": "string",
            "enum": ["low", "medium", "high"],
            "default": "low"
          }
        }
      },
      "Task": {
        "allOf": [
          { "$ref": "#/components/schemas/BaseTaskFields" },
          {
            "type": "object",
            "properties": {
              "user": { "type": "string" }
            },
            "required": ["title", "user"]
          }
        ]
      },
      "UpdateTask": {
        "allOf": [{ "$ref": "#/components/schemas/BaseTaskFields" }]
      },
      "TaskResponse": {
        "allOf": [
          { "$ref": "#/components/schemas/Task" },
          {
            "type": "object",
            "properties": {
              "_id": { "type": "string" }
            }
          }
        ]
      },
      "TaskResponseWithUserPopulated": {
        "allOf": [
          { "$ref": "#/components/schemas/TaskResponse" },
          {
            "type": "object",
            "properties": {
              "user": {
                "$ref": "#/components/schemas/UserResponse"
              }
            }
          }
        ]
      }
    },

    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "jsonwebtoken"
      },
      "googleAuthenticatorAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "jsonwebtoken"
      }
    }
  }
}
